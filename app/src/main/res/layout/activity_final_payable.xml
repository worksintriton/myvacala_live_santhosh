<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_backarrow_black" />





    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView"
        android:fillViewport="true"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/parking_success"/>
                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/final_payable"
                    android:textSize="20sp"
                    android:textColor="@color/myvacalablack"
                    android:fontFamily="@font/axiforma_semibold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:background="@drawable/parking_bg_gray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll_root">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ll_share">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="vertical"
                            android:layout_marginTop="30dp">

                            <ImageView
                                android:id="@+id/img_share"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_share_white"
                                android:layout_marginEnd="40dp"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:gravity="end"
                                android:id="@+id/txt_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/axiforma_semibold"
                                android:text="@string/share_location"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:layout_marginEnd="20dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="50dp">
                                <TextView
                                    android:id="@+id/txt_buildingname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/axiforma_semibold"
                                    android:text="Buildingname"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="10dp"/>
                                <TextView
                                    android:id="@+id/txt_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/axiforma_semibold"
                                    android:text="Address"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="80dp"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    tools:ignore="UseCompoundDrawables"
                                    android:layout_marginTop="10dp">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/ic_speed"/>
                                    <TextView
                                        android:id="@+id/txt_distance_reachtime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2.3mins/3.3 mins"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:textSize="12sp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="5dp"/>
                                </LinearLayout>



                            </LinearLayout>



                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/whiteEight"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="40dp"
                            />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="fill_parent"
                                android:layout_width="0dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="50dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:text="@string/booking_id"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:layout_marginEnd="10dp"/>
                                    <TextView
                                        android:id="@+id/txt_bookingid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:text="@string/bookingid"
                                        android:textColor="@color/warmGreyFour"
                                        android:textSize="12sp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="30dp"
                                        android:layout_marginEnd="10dp"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:text="@string/amountpaid"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/txt_amountpaid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="10dp"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:text="@string/amountpaid"
                                        android:textColor="@color/warmGreyFour"
                                        android:textSize="12sp" />




                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="fill_parent"
                                android:layout_width="0dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="20dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="10dp"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:text="@string/vehicledetails"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="5dp">

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/cv_vehicleimage"
                                            android:layout_width="44dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:src="@drawable/logo" />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginStart="5dp">

                                            <TextView
                                                android:id="@+id/txt_vehiclename"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginEnd="20dp"
                                                android:ellipsize="end"
                                                android:fontFamily="@font/axiforma_semibold"
                                                android:maxLines="1"
                                                android:text="@string/vehicleno"
                                                android:textColor="@color/warmGreyFour"
                                                android:textSize="12sp"

                                                />
                                            <TextView
                                                android:id="@+id/txt_vehicle_number"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:fontFamily="@font/axiforma_semibold"
                                                android:text="@string/vehicleno"
                                                android:textColor="@color/warmGreyFour"
                                                android:textSize="12sp"
                                                android:layout_marginEnd="20dp"
                                                android:maxLines="1"
                                                android:ellipsize="end"/>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:text="@string/floor"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="20dp"/>

                                    <TextView
                                        android:id="@+id/txt_floor_block_slot"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="20dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:maxLines="2"
                                        android:text="@string/amountpaid"
                                        android:textColor="@color/warmGreyFour"
                                        android:textSize="12sp"
                                        />




                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/whiteEight"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="40dp"
                            />

                        <TextView
                            android:layout_marginStart="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/axiforma_semibold"
                            android:text="@string/booking_slot_window"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/txt_bookingslotwindow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="30dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/axiforma_semibold"
                            android:maxLines="2"
                            android:text="@string/booking_slot_window"
                            android:textColor="@color/white"
                            android:textSize="14sp" />



                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_hoursextension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours extension"
                    android:textColor="@color/myvacalabutton"
                    android:fontFamily="@font/axiforma_semibold"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView

                    android:gravity="end"
                    android:id="@+id/txt_hoursextension_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="@color/myvacalabutton"
                    android:fontFamily="@font/axiforma_semibold"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteEight"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    android:text="@string/final_payable"
                    android:fontFamily="@font/axiforma_semibold"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:text="Total Bill Value"
                        android:fontFamily="@font/axiforma_semibold"
                        />
                    <TextView
                        android:id="@+id/txt_total_bill_value"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:text="Amount"
                        android:fontFamily="@font/axiforma_semibold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/green"
                        android:text="Amount Paid"
                        android:fontFamily="@font/axiforma_semibold"
                        />
                    <TextView
                        android:id="@+id/txt_time_extension_amount_paid"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/green"
                        android:text="Amount"
                        android:fontFamily="@font/axiforma_semibold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="To Pay"
                        android:fontFamily="@font/axiforma_semibold"
                        />
                    <TextView
                        android:id="@+id/txt_topay"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="Amount"
                        android:fontFamily="@font/axiforma_semibold"
                        />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:background="@drawable/button_background"
                    android:id="@+id/rlpay">
                    <TextView
                        android:layout_marginStart="20dp"
                        android:id="@+id/txt_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/axiforma_semibold"
                        android:text="Pay"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        tools:ignore="SmallSp"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        />
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/txt_pay"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_forware_whitebg"
                        android:layout_margin="5dp"/>
                </RelativeLayout>
            </LinearLayout>






        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_parking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@drawable/drawer_item_color"
            app:itemTextColor="@drawable/drawer_item_color"
            app:itemIconSize="20dp"
            app:elevation="8dp"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_parking"
            app:itemBackground="@color/myvacalablack"
            app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
            app:itemTextAppearanceInactive="@style/BottomNavigationView"

            />

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/myvacalabutton"
        app:indicatorName="LineSpinFadeLoaderIndicator" />
</RelativeLayout>