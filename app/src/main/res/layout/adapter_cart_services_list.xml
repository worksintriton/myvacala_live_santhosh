<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangle_corner_withooutradious"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_cart_subservice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/axiforma_semibold"
                android:text="@string/subservices"
                android:textColor="@color/myvacalablack"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/servicesskucode"
                    android:fontFamily="@font/axiforma_semibold"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:visibility="gone"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/txt_cart_subservice_originalamount"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs29999"
                        android:fontFamily="@font/axiforma_semibold"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_toRightOf="@+id/txt_cart_subservice_originalamount"
                        android:id="@+id/txt_cart_subservice_discountamount"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS.1999"
                        android:fontFamily="@font/axiforma_semibold"
                        android:textColor="@color/myvacalablack"
                        android:textSize="14sp" />

                    <Button
                        android:layout_marginStart="10dp"
                        android:id="@+id/btn_add_remove"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/mybutton"
                        android:fontFamily="@font/axiforma_semibold"
                        android:text="Add"
                        android:textColor="@color/myvacalabutton"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/txt_cart_subservice_discountamount" />
                    <LinearLayout
                        android:id="@+id/ll_multipleadd"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_cart_subservice_discountamount"
                        android:background="@drawable/mybutton"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/txt_decrease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_baseline_indeterminate_check_box_24"
                            android:layout_marginBottom="10dp"

                            />

                        <TextView
                            android:id="@+id/txt_count_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"/>


                        <TextView
                            android:id="@+id/txt_increase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_baseline_add_box_24"
                            android:layout_marginBottom="10dp"/>




                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>



</LinearLayout>